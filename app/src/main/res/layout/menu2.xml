<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewPickUpLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Penjemputan"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/editTextPickUpLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPickUpLocation"
        android:layout_marginTop="8dp"
        android:hint="Masukkan alamat penjemputan"/>

    <TextView
        android:id="@+id/textViewPickUpTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu Penjemputan"
        android:layout_below="@id/editTextPickUpLocation"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/editTextPickUpTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPickUpTime"
        android:layout_marginTop="8dp"
        android:hint="Masukkan waktu penjemputan"/>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/editTextPickUpTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
